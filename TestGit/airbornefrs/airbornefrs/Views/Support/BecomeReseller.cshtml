@model airbornefrs.Models.SupportReseller
@{
    ViewBag.Title = "Airborne FRS: BecomeReseller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
   
    <link href="~/Content/intlTelInput.css" rel="stylesheet" />
    <link href="~/external/bootstrap-select/bootstrap-select.css" rel="stylesheet">
    <link href="~/external/mCustomScrollbar/jquery.mCustomScrollbar.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.3/css/bootstrapValidator.min.css" />

        <!-- Section show current page and breadcrumb -->
        <section class="page-indecator">
            <div class="container">
                <h2 class="heading">Become a Reseller</h2>
                <!-- Breadcrumb pattern -->
                <ol class="breadcrumb breadcrumb-pages">
                    <li><a href="~/Home/Index">Home</a></li>
                    <li class="active">Become a Reseller</li>
                </ol>
                <!-- Default one color devider -->
                <div class="devider"></div>
            </div>
        </section>
        <!-- end section show current page and breadcrumb -->
        <div class="inner-page-template extra clearfix" ng-controller="ResellerCtrl">
            <div class="container">
                <h2>Resellers</h2>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 form-text">
                        <h3>Looking for Resellers</h3>
                        <p class="p-space">We believe every pilot, air crew, ground personnel, operators, carriers, employers, passengers, and vested family and friends should have some type of Airborne FRS product! To help us meet this goal, we have established a Reseller Program to make it easier for people and businesses obtain Airborne from their existing trusted suppliers and stores.</p>
                        <p class="p-space">Once you submit the form on this page, you will receive an email message with the support ticket identification. Our Ground Crew will then contact you via the email support ticket. Thank you.</p>
                    </div>
                    <div class="col-xs-12 col-sm-6 support-form Reseller-form">
                        <h3>Apply to be a Reseller</h3>
                        <div class="fmessage" style="color:#0d3a60;"></div></br>
                        <form method="post" class="contact" role="form" ng-focus="true" ng-submit="submitForm()" name="BecomeaReseller" id="BecomeaReseller">
                           <div class="form-group has-feedback">
                                <label>*Name</label>
                               <input type="text" class="contact__field" placeholder="" ng-model="data.ResellerData.Name" name="Name">
                            </div>
                            <div class="form-group has-feedback">
                                <label>*Email Address</label>
                                <input type="text" class="contact__field" placeholder="" ng-model="data.ResellerData.Email" name="Email">
                            </div>
                            <div class="form-group has-feedback">
                                <label>Company Name</label>
                                <input type="text" class="contact__field" placeholder="" ng-model="data.ResellerData.CompanyName" name="CompanyName">
                            </div>
                            <div class="form-group has-feedback">
                                <label>*Telephone number</label>
                                <input type="text" class="contact__field" placeholder="" ng-model="data.ResellerData.Telephone" name="Telephone">

                                <div class="radio radio--dark">
                                    <input type="radio" value="Landline" name="TeleType" ng-model="data.ResellerData.TeleType" id="Landline" data-fv-field="Landline">
                                   Landline
                                </div>
                                <div class="radio radio--dark">
                                    <input type="radio" value="Mobile" name="TeleType" ng-model="data.ResellerData.TeleType" id="Mobile" data-fv-field="Mobile"> 
                                   Mobile
                                </div>
                             </div>
                            <div class="form-group has-feedback">
                                <label>*Primary Type Of Buisness</label>
                                <select class="select-box" name="PrimaryTypeOfBuisness" ng-model="data.ResellerData.BuisnessType">
                                    <option value="" selected="selected">Select One</option>
                                    <option value="Airborne C100">Airborne C100 </option>
                                    <option value="Airborne C100">Dealer representative</option>
                                    <option value="Airborne S100">eCommerce/catalog store</option>
                                    <option value="Airborne S200">FBO</option>
                                    <option value="Airborne D500">Maintenance facility</option>
                                    <option value="VISability™ Portal">Retail store </option>
                                    <option value="Airborne Flight Sense™ Base Sensor System">Retail store (at airport)</option>
                                    <option value="Airborne Flight Sense™ Sensors">Training center</option>
                                    <option value="Airborne FRS Training Program">Travel agency</option>
                                    <option value="ADS - B Interoperability Demonstration Kit">others</option>
                                </select>
                            </div>
                            
                            <div class="form-group has-feedback">
                                <label>*How can we help?</label>
                                <textarea class="contact__field" ng-model="data.ResellerData.AdditionalInfo" name="AdditionalInfo"></textarea>
                            </div>

                            <div class="form-group has-feedback">
                                <label>Human Test </label>
                                <div id="captchaContainer">
                                    <div class="g-recaptcha" data-sitekey="6Lfppw8TAAAAAPyLD_-5SAbI_6b3z_l48nFZVJiz"></div>
                                </div>
                            </div>
                            <div class="form-group has-feedback">
                                <button id="submit_btn" type="submit" name="submitButton" class="btn btn-warning btn--decorated">Submit</button>
                            </div>
                        </form>
                        <div id="dvAfterSubmit"></div>
                    </div>
                </div>
            </div>
            <!-- end container -->
        </div>
        <!-- Modal -->
        <div class="modal fade--zoom" aria-labelledby="fastfacts" tabindex="-1" role="dialog" id="fastfacts">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i></button>
                        <h4 class="modal-title" id="fastfacts">FastFacts</h4>
                    </div>
                    <div class="modal-body">
                        <ul class="list">
                            <li> Airborne Flight Reporting System: for all Air &amp; Ground Crews, Passengers, Family &amp; Associates!</li>
                            <li>Affordable Flight Tracking &amp; Management: great for General Aviation flight either VFR &amp; IFR!</li>
                            <li>Airborne FRS for Vertical Lift: Reports on the unique Flight Characteristics of VTOLs!</li>
                            <li> Lightweight for the Drones: Provides enhanced Flight Monitoring for Drones!</li>
                            <li>Makes Unpredictable Flight Safer: If it Takes-off, is should have Airborne!</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="top-scroll"><i class="fa fa-angle-up"></i></div>
    
@section BottomScript{
    <script>
        var objContactReseller = @Html.Raw(Model.GetJsonData());
    </script>
    <script src="~/assets/js/controllers/supportReseller.js"></script>
}




